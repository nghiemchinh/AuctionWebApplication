@using System.Security.Claims;
@model IEnumerable<SoldItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="brand_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Sold Out
            </h2>
        </div>
        <div class="brand_container layout_padding2">
            @foreach (var item in Model)
            {
                <div class="box" style="background-color:#f8f9fa;">
                    <a>
                        <div class="img-box">
                            <img src="~/@item.Auction.Image"
                                 alt="Items Image" width="150px" height="150px">
                        </div>
                        <div class="detail-box">
                            <h6 class="price">
                                @Html.DisplayNameFor(model => model.FinalPrice)     @Html.DisplayFor(modelItem => item.FinalPrice) $
                                <h6 style="font-family:courier,arial,helvetica;">
                                    @Html.DisplayNameFor(model => model.Auction.AuctionName)  @Html.DisplayFor(modelItem => item.Auction.AuctionName) <br>

                                 
                                </h6>
                                <h4 style="color:red;">
                                    @Html.DisplayNameFor(model => model.Bidder) @Html.DisplayFor(modelItem => item.Bidder.Name)
                                </h4>
                        </div>
                    </a>

                </div>
            }
        </div>
</section>

