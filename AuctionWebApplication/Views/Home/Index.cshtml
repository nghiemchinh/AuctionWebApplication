@model IEnumerable<AuctionWebApplication.Auction>
@using System.Security.Claims;

@{
    ViewData["Title"] = "Home Page";
}

<!-- discount section -->

<section class="discount_section  layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="detail-box">
                    <h2>
                        The Latest Collection
                    </h2>
                    <h2 class="main_heading">
                        The Best
                    </h2>

                    <div class="">
                        <a asp-action="Index" asp-controller="Auctions">
                            Buy Now
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="img-box">
                    <img src="images/discount-img.png" alt="">
                </div>
            </div>
        </div>
    </div>
</section>


<!-- end discount section -->
<!-- brand section -->

<section class="brand_section">
    <div class="container">
        <div class="heading_container">
            <h2>
                Featured Brands
            </h2>
        </div>
        <div class="brand_container layout_padding2">
        @foreach (var item in Model.Take(8)) {

                <div class="box" style="background-color:#f8f9fa;">
                    <a asp-action ="Details" asp-controller="Auctions" asp-route-id="@item.AuctionId">
                        <div class="img-box">
                                <img src="~/@item.Image"
                                        alt="Items Image" width="150px" height="150px">
                        </div>
                        <div class="detail-box">
                            <h6 class="price">
                                    @Html.DisplayFor(modelItem => item.StartPrice)$
                            </h6>
                            <h6 style="font-family:courier,arial,helvetica;">
                                    @Html.DisplayFor(modelItem => item.AuctionName)
                            </h6>
                        </div>
                    </a>
                </div>
        }
    </div>
</section>

